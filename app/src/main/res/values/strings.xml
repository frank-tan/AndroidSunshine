    <string name="refresh">Refresh</string>
    <string name="title_activity_weather_detail">Detail</string>
    <string name="pref_location_label">Location</string>
    <string name="pref_location_key" translatable="false">location</string>
    <string name="pref_location_default" translatable="false">6000,au</string>
    <string name="pref_unit_key" translatable="false">unit</string>
    <string name="pref_unit_label">Unit</string>
